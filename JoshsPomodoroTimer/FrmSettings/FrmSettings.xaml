<Window x:Class="JoshsPomodoroTimer.FrmSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JoshsPomodoroTimer"
        mc:Ignorable="d" Background="Transparent" 
        WindowStyle="None" AllowsTransparency="True"
        Height="400" Width="300" WindowStartupLocation="CenterScreen">
    <Border Background="#302445" CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="39*"/>
                <RowDefinition Height="48*"/>
                <RowDefinition Height="47*"/>
                <RowDefinition Height="46*"/>
                <RowDefinition Height="73*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="1" Foreground="White" 
                   FontWeight="SemiBold"  Content="Pauses effect break time:" FontSize="14" 
                   Margin="10,10,-10,40" Grid.RowSpan="2"
                   ToolTip="If checked, time will be taken away from your break when clock is paused"
                   />

            <CheckBox Name="chkboxPausesEffectBreak" HorizontalAlignment="Left" 
                      Margin="265,15,0,0" Grid.Row="1" VerticalAlignment="Top"/>

            <Label Grid.Row="2" Foreground="White" FontWeight="SemiBold" 
                   Content="Automatically Start Breaks:" FontSize="14" 
                   Grid.RowSpan="2" Margin="10,0,-10,0"
                   ToolTip="If checked, break and new session timer will automaticaly start after playing alarm sound."
                   />

            <CheckBox Name="chkboxAutoStartBreaks" HorizontalAlignment="Left" 
                      Margin="265,10,0,0" Grid.Row="2" VerticalAlignment="Top" />


            <Label Grid.Row="3" Foreground="White" FontWeight="SemiBold" 
                   Content="Alarm Sound:" FontSize="14" 
                   Grid.RowSpan="2" Margin="10,0,-10,0"
                   />

            <Label Grid.Row="4" Foreground="White" FontWeight="SemiBold" 
                   Content="Volume:" FontSize="14" 
                   Grid.RowSpan="2" Margin="10,0,-10,1"
                   />


            <Label Grid.Row="5" Foreground="White" FontWeight="SemiBold" 
                   Content="Custom Timer interval" FontSize="14" 
                   Grid.RowSpan="2" Margin="10,0,-10,0"
                   />

            <Label Content="Settings" FontWeight="Heavy" Foreground="White" Margin="10,6,206,6"/>
            <Image MouseLeftButtonDown="btnExit_Click" Margin="271,10,10,6" Source="/Theme/closebutton.png" Stretch="Fill"/>
            <Image MouseLeftButtonDown="btnSave_Click" Margin="94,3,94,0" Grid.Row="7" Source="/Theme/Save.png" Stretch="Fill"/>

        </Grid>
    </Border>
</Window>
